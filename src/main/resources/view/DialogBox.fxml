<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root alignment="TOP_RIGHT"
         prefWidth="400.0"
         type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/24.0.1"
         xmlns:fx="http://javafx.com/fxml/1"
         style="-fx-spacing: 10; -fx-padding: 10 10 10 10;">
    <children>
        <!-- Chat bubble -->
        <Label fx:id="dialog"
               text="Label"
               wrapText="true"
               style="-fx-background-color: #2c2c3c; -fx-text-fill: #e0e0e0;
                      -fx-background-radius: 20; -fx-border-radius: 20;
                      -fx-padding: 12 18; -fx-max-width: 280;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 5,0,2,2);">
            <HBox.margin>
                <Insets left="7.0" right="7.0"/>
            </HBox.margin>
        </Label>

        <!-- Profile picture -->
        <ImageView fx:id="displayPicture"
                   fitHeight="70.0"
                   fitWidth="70.0"
                   pickOnBounds="true"
                   preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 5,0,2,2); -fx-clip: rect(0,70,70,0);" />
    </children>
</fx:root>
