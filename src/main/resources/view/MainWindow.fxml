<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="LeeKuanYew.MainWindow"
            style="-fx-background-color: #1e1e2f; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-text-fill: #e0e0e0;">
    <children>
        <!-- Input field -->
        <TextField fx:id="userInput"
                   layoutY="558.0"
                   onAction="#handleUserInput"
                   prefHeight="41.0"
                   prefWidth="320.0"
                   AnchorPane.bottomAnchor="10.0"
                   AnchorPane.leftAnchor="10.0"
                   style="-fx-background-color: #2c2c3c; -fx-text-fill: white; -fx-prompt-text-fill: #888;
                          -fx-background-radius: 25; -fx-border-radius: 25; -fx-padding: 5 15; -fx-border-color: #444;" />

        <!-- Send button -->
        <Button fx:id="sendButton"
                layoutY="558.0"
                layoutX="340.0"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="41.0"
                prefWidth="41.0"
                text="â†’"
                AnchorPane.bottomAnchor="10.0"
                AnchorPane.rightAnchor="10.0"
                style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-background-radius: 25; -fx-border-radius: 25; -fx-cursor: hand;" />

        <!-- Scrollable chat area -->
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vvalue="1.0"
                    AnchorPane.bottomAnchor="60.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0"
                    style="-fx-background: #1e1e2f; -fx-border-color: transparent;">
            <content>
                <VBox fx:id="dialogContainer"
                      prefHeight="552.0"
                      prefWidth="388.0"
                      spacing="12"
                      style="-fx-background-color: #1e1e2f; -fx-padding: 15;" />
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
